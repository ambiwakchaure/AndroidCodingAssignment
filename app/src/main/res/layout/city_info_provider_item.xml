<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cityInfoProvider"
            type="android.assignment.telstra.data.database.entities.CityInfoProvider" />
    </data>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/item_background"
            android:padding="@dimen/padding_5pt"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crc55"
                android:text="@{cityInfoProvider.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                tools:text="Title">

            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/crc55"
                    android:text="@{cityInfoProvider.description}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:text="Description">

                </TextView>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/height_50pt"
                    android:layout_weight="2"
                    android:scaleType="fitXY"
                    android:setimage="@{cityInfoProvider.imageHref != null ? cityInfoProvider.imageHref : @string/default_image_url}">

                </ImageView>


            </LinearLayout>

        </LinearLayout>
</layout>
