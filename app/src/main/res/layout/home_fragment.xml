<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="homeViewModel"
            type="android.assignment.telstra.ui.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/itemsswipetorefresh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:refreshing="@{homeViewModel.isLoading}"
            app:onRefreshListener="@{() -> homeViewModel.onRefreshCityInfoList()}">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/city_info_recyclerview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:listitem="@layout/city_info_provider_item"></androidx.recyclerview.widget.RecyclerView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>